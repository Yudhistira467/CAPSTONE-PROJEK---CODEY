<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcome.WelcomeActivity">

    <ImageView
        android:id="@+id/ivWelcome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/zcodeyfix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <Button
        android:id="@+id/signupWelcome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:background="@drawable/rounded_button"
        android:text="@string/judul_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginWelcome"
        app:layout_constraintVertical_bias="0.05"
        tools:alpha="100" />

    <Button
        android:id="@+id/loginWelcome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:background="@drawable/rounded_button"
        android:text="@string/judul_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivWelcome"
        app:layout_constraintVertical_bias="0.003"
        tools:alpha="100" />

</androidx.constraintlayout.widget.ConstraintLayout>